<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.admin.mapper.SysUserRoleMapper">

    <sql id="Base_Column_List">
        id, user_code, role_code    </sql>

    <resultMap id="BaseResultMap" type="com.platform.admin.entity.SysUserRole">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userCode" column="user_code" jdbcType="VARCHAR"/>
        <result property="roleCode" column="role_code" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, user_code, role_code
        from z-test.sys_user_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, user_code, role_code
        from z-test.sys_user_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, user_code, role_code
        from z-test.sys_user_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userCode != null and userCode != ''">
                and user_code = #{userCode}
            </if>
            <if test="roleCode != null and roleCode != ''">
                and role_code = #{roleCode}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into z-test.sys_user_role(user_code, role_code)
        values (#{userCode}, #{roleCode})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update z-test.sys_user_role
        <set>
            <if test="userCode != null and userCode != ''">
                user_code = #{userCode},
            </if>
            <if test="roleCode != null and roleCode != ''">
                role_code = #{roleCode},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from z-test.sys_user_role where id = #{id}
    </delete>

</mapper>